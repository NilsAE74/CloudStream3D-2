{
  "name": "cloudstream3d-2",
  "version": "1.0.0",
  "description": "Web application for visualizing and processing XYZ point cloud data",
  "main": "electron/main.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "electron:dev": "concurrently \"npm run server\" \"npm run client:electron\" \"npm run electron:start\"",
    "client:electron": "cd client && npx cross-env BROWSER=none npm start",
    "electron:start": "npx wait-on http://localhost:3000 && npx electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "point-cloud",
    "3d-visualization",
    "xyz-data",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "papaparse": "^5.4.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.cloudstream3d.app",
    "productName": "CloudStream3D",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "client/build/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "uploads",
        "to": "uploads",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "client/public/favicon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "client/public/favicon.ico",
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "client/public/favicon.ico",
      "category": "Graphics"
    }
  }
}
