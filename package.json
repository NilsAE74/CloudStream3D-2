{
  "name": "cloudstream3d-2",
  "version": "1.0.0",
  "description": "Web application for visualizing and processing XYZ point cloud data",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "node server/utils/generateReport.test.js",
    "test:metadata": "node server/utils/generateReport.test.js"
  },
  "keywords": [
    "point-cloud",
    "3d-visualization",
    "xyz-data"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.2.0",
    "chart.js": "^4.5.1",
    "chartjs-node-canvas": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "papaparse": "^5.4.1",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
